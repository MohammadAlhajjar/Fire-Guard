

{% block content %}
    <div class="container wrapper-container py-4">
        <div class="register-form-wrapper">
            <h3>
                {{ 'registerNow'|trans }}
            </h3>
            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_row(registrationForm.fullName, {attr: {placeholder: 'fullName'|trans}, label: false}) }}
                        </div>
                    </div> 
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_row(registrationForm.email, {attr: {placeholder: 'email'|trans}, label: false}) }}
                        </div>
                    </div> 
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_row(registrationForm.phoneNumber, {attr: {placeholder: 'phoneNumber'|trans}, label: false}) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_row(registrationForm.gender, {attr: {placeholder: 'gender'|trans}, label: false}) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_row(registrationForm.dateOfBirth, {attr: {placeholder: 'dateOfBirth'|trans}, label: false}) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_row(registrationForm.password, {attr: {placeholder: 'password'|trans}, label: false}) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_row(registrationForm.confirmPassword, {attr: {placeholder: 'confirmPassword'|trans}, label: false}) }}
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12 text-center">
                        <button type="submit" class="btn btn-primary custom-btn-primary w-100">{{ 'registerNowBtn'|trans }}</button>
                    </div>

                    <div class="col-12">
                        <div class="sub-title">
                            <span>{{ 'or'|trans }}</span>
                        </div>
                    </div>

                    
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
